<div class="main-card">
    <form method="post" action="/watches/edit" enctype="multipart/form-data">
        <div class="form-group">
            <label for="brand">Brand</label><br>
            <input type="text" name="brand" class="form-control" value="{{data.brand}}" required><br>
        </div>
        <div class="form-group">
            <label for="model">Model</label><br>
            <input type="text" name="model" class="form-control" value="{{data.model}}" required><br>
        </div>
        <div class="form-group">
            <label for="year">Year</label><br>
            <input type="number" min="1899" class="form-control" value="{{data.year}}" max="2040" step="1" name="year"
                required><br>
        </div>
        <div class="form-group">
            <label for="color">Color</label><br>
            <input type="text" name="color" class="form-control" value="{{data.color}}" required><br>
        </div>
        <div class="form-group">
            <label for="description">Description</label><br>
            <textarea name="description" class="form-control" cols="30" rows="10">{{data.description}}</textarea><br>
        </div>
        <div class="form-group">
            <label for="price">Price</label><br>
            <input type="number" name="price" class="form-control" value="{{data.price}}" min="0.01" step="0.01"
                required><br>
        </div>
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label for="currentPicture">Current picture</label><br>
                    {{#if data.picturePath}}
                    <img src="/watchuploads/{{data.picturePath}}" name="currentPicture" class="watch-photo-edit-preview"
                        alt="">
                    {{else}}
                    <img src="/watchuploads/genericwatch.png" name="currentPicture" class="watch-photo-edit-preview"
                        alt="">
                    {{/if}}
                </div>
            </div>
            <div class="col-8">
                <div class="form-group">
                    <label for="picturePath">Replace current picture</label><br>
                    <input type="file" name="picturePath" class="form-control" value="{{data.picturePath}}"
                        accept="image/png, image/jpeg"><br>
                </div>
                <div class="form-group">
                    <label for="pictureRemove">Remove picture?</label>
                    <input type="checkbox" name="pictureRemove"><br>
                </div>
            </div>
        </div>
        <br>
        <input type="hidden" name="id" value="{{data.id}}">
        <a href="/watches/delete/{{data.id}}" class="btn btn-danger">Delete</a>
        <input type="submit" value="Update" class="btn btn-success">
        <a href="/" class="btn btn-secondary">Back</a>
    </form>
</div>