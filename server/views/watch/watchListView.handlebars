{{#if data}}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Price</th>
            <th>Visibility</th>
            <th>Last Modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td><strong>{{this.brand}}</strong></td>
            <td>{{this.model}}</td>
            <td>{{this.year}}</td>
            <td>
                <strong style="color:{{this.color}}; text-shadow: 0 0 2px black;">{{this.color}}</strong>
            </td>
            <td style="text-align: right;">${{this.price}}</td>
            <td style="text-align: center;">
                {{#if this.hidden}}
                <i class="fa-solid fa-eye-slash" style="color:red"></i>
                {{else}}
                <i class="fa-solid fa-eye" style="color:green"></i>
                {{/if}}
            </td>
            <td>{{this.updatedAt}}</td>
            <td><a class="btn btn-dark" href="/watches/edit/{{this.id}}"><i class="fa-solid fa-square-pen"></i> Edit</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>The watch inventory is currently empty!</p>
{{/if}}
<a class="btn btn-dark" href="/watches/add"><i class="fa-solid fa-plus"></i> Add</a>