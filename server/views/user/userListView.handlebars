{{#if data}}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Email</th>
            <th style="text-align: center;">Admin?</th>
            <th>Last Modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td><strong>{{this.email}}</strong></td>
            <td style="text-align: center;">
                {{#if this.admin}}
                <i class="fa-solid fa-circle-check" style="color: green;"></i>
                {{else}}
                <i class="fa-solid fa-circle-xmark" style="color: red;"></i>
                {{/if}}
            </td>
            <td><i>{{this.updatedAt}}</i></td>
            <td>
                <a class="btn btn-dark" href="/users/edit/{{this.id}}"><i class="fa-solid fa-square-pen"></i> Edit</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>There are currently no users!</p>
{{/if}}
<a class="btn btn-dark" href="/users/add"><i class="fa-solid fa-plus"></i> Add</a>