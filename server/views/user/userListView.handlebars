{{#if data}}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Username/Email</th>
            <th class="text-center">Admin?</th>
            <th class="text-end">Last modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td><i class="fa-solid fa-user"></i> <strong>{{this.email}}</strong></td>
            <td class="text-center">
                {{#if this.admin}}
                <i class="fa-solid fa-circle-check" style="color: green;"></i>
                {{else}}
                <i class="fa-solid fa-circle-xmark" style="color: red;"></i>
                {{/if}}
            </td>
            <td class="text-end"><i>{{this.updatedAt}}</i></td>
            <td class="text-end">
                <a class="btn btn-dark" href="/users/edit/{{this.id}}"><i class="fa-solid fa-pencil"></i> Edit</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>There are currently no users!</p>
{{/if}}
<div class="text-center"><a class="btn btn-dark" href="/users/add"><i class="fa-solid fa-plus"></i> Add</a></div>